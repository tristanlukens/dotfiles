{
  // format on save
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "javascript",
    "graphql",
    "html",
    "yaml",
    "json",
    "python"
  ],

  // prettier
  "prettier.useTabs": true,
  "prettier.tabWidth": 4,

  // go
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": [
        "go.mod",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "filetypes": [
        "go"
      ]
    }
  }
}
